<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>ro.ubb.Assignment8.Controller.LoginController</servlet-class>
</servlet>

    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>ro.ubb.Assignment8.Controller.LogoutController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>ro.ubb.Assignment8.Controller.RegisterController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TopicsController</servlet-name>
        <servlet-class>ro.ubb.Assignment8.Controller.TopicsController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CommentsController</servlet-name>
        <servlet-class>ro.ubb.Assignment8.Controller.CommentsController</servlet-class>
    </servlet>

<servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/LoginController</url-pattern>
</servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>

<servlet-mapping>
    <servlet-name>RegisterController</servlet-name>
    <url-pattern>/RegisterController</url-pattern>
</servlet-mapping>

    <servlet-mapping>
        <servlet-name>TopicsController</servlet-name>
        <url-pattern>/TopicsController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CommentsController</servlet-name>
        <url-pattern>/CommentsController</url-pattern>
    </servlet-mapping>
</web-app>